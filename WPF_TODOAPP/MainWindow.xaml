<Window x:Class="WPF_TODOAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TODOAPP"
        mc:Ignorable="d"
        Background="#6c2977"
        Foreground="White"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="MainWindow" Height="450" Width="300">



    <Grid>
        <ListBox x:Name="ToDoListBox" Width="250" Height="300" Background="#844A8A" Margin="25,21,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Background="#9D008A">
                        <TextBlock Text="{Binding Title}" Foreground="White" />
                        <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}" Unchecked="CheckBox_Checked" Checked="CheckBox_Checked"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Přidat"
                Click="AddNewToDo"
                HorizontalAlignment="Left" 
                Margin="25,357,0,0"
                VerticalAlignment="Top"
                Width="60"/>
        
        <Button Content="Odebrat" 
                Click="RemoveSelectedTodo"
                HorizontalAlignment="Left"
                Margin="107,357,0,0"
                VerticalAlignment="Top"
                Width="57"/>

    </Grid>
</Window>
