<Window x:Class="WPF_TODOAPP.Windows.NewFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TODOAPP.Windows"
        mc:Ignorable="d"
        Background="#6c2977"
        Title="Create New ToDo" Height="200" Width="200">
    <Grid>
        <Label Content="Title:" HorizontalAlignment="Left" Margin="10,25,0,0" Foreground="White" VerticalAlignment="Top"/>
        <TextBox x:Name="TitleInput" HorizontalAlignment="Left" Margin="50,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <CheckBox Content="Done" x:Name="IsDoneInput" Foreground="White" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="28,132,0,0" VerticalAlignment="Top" Width="55" Click="SaveButton_Click" />
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="110,132,0,0" VerticalAlignment="Top" Width="55" Click="CancelButton_Click"/>

    </Grid>
</Window>
